{
  "$schema": "https://json.schemastore.org/prettierrc",
  "printWidth": 100,
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "all",
  "arrowParens": "always",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "endOfLine": "lf",
  "plugins": [
    "prettier-plugin-tailwindcss",
    "prettier-plugin-organize-imports",
    "prettier-plugin-packagejson"
  ],
  "tailwindStylesheet": "./src/styles/globals.css",
  "overrides": [
    {
      "files": ["**/*.md", "**/*.mdx"],
      "options": {
        "proseWrap": "always"
      }
    },
    {
      "files": ["**/*.yml", "**/*.yaml", "**/*.toml"],
      "options": {
        "singleQuote": false
      }
    }
  ]
}
