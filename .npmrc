# Registries
registry=https://registry.npmjs.org/
@my-org:registry=https://npm.pkg.github.com

# Auth via env (never commit tokens)
# Set NPM_TOKEN and GITHUB_PACKAGES_TOKEN in your shell/CI
//registry.npmjs.org/:_authToken=${NPM_TOKEN}
//npm.pkg.github.com/:_authToken=${GITHUB_PACKAGES_TOKEN}

# Install & resolution
save=true
save-exact=true
package-lock=true
strict-peer-deps=false
engine-strict=false
audit=true
fund=false

# Networking
strict-ssl=true
fetch-retries=3
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# UX
loglevel=warn
color=true
progress=true
