{
  "extends": "stylelint-config-standard-scss",
  "rules": {
    "at-rule-no-unknown": null,
    "scss/at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "custom-variant",
          "theme",
          "tailwind",
          "tailwind-base",
          "tailwind-components",
          "tailwind-utilities",
          "layer"
        ]
      }
    ]
  }
}
